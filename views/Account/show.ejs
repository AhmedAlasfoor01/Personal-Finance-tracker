<!DOCTYPE html><!--To show one account only of the user -->
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=account.accountName%></title>
</head>
<body>
  <div class="card">
        <div class="card-body">
            <h5>Account Details</h5>
            <p><strong>Account Name:</strong> <%= account.accountName %></p>
            <p><strong>Account Type:</strong> <%= account.accountType %></p>
            <p><strong>Current Balance:</strong> $<%= account.balance %></p>
            <% if (account.accountNumber) { %>
                <p><strong>Account Number:</strong> **<%= account.accountNumber %></p>
            <% } %>
        </div>
    </div>
    
   
    
        <a href="/accounts/<%= account._id %>/edit" class="btn btn-primary">Edit This Account</a>
        <a href="/transactions/new" class="btn btn-success">Add Transaction</a>
        <form style="display:inline;" action="/accounts/<%= account._id %>?_method=DELETE" method="POST">
            <button type="submit" class="btn btn-danger" 
                    onclick="return confirm('Delete this account?')">Delete Account</button>
        </form>
    </div>
    
    <hr>
    
    
    <h3>Transactions for This Account</h3>
    <% if (transactions.length === 0) { %>
        <p>No transactions yet for this account.</p>
        <a href="/transactions/new" class="btn btn-success">Add First Transaction</a>
    <% } else { %>
        <table class="table">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Amount</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(transaction => { %>
                    <tr>
                        <td><%= new Date(transaction.transactionDate).toDateString() %></td>
                        <td><%= transaction.description %></td>
                        <td><%= transaction.category %></td>
                        <td>
                            <span class="<%= transaction.amount >= 0 ? 'text-success' : 'text-danger' %>">
                                $<%= transaction.amount %>
                            </span>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    <% } %>
    
    <a href="/accounts" class="btn btn-outline-secondary">Back to All Accounts</a>
</div>

</body>
</html>